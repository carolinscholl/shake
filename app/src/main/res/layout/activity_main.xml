<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="de.tu_chemnitz.mi.medienapplikationen.shake.MainActivity"
    android:background="#e3e3e3">


    <com.john.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grad_list"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/white"
        wave:progress="20"
        wave:wave_height="middle"
        wave:wave_hz="normal"
        wave:wave_length="large"
        />


    <TextView
        android:id="@+id/Shakeme"
        android:text="Shake me!"
        android:textColor="#ffffff"
        android:textSize="80sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        />



    <ListView
        android:id="@+id/Sensorliste"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="invisible"
        android:listSelector="@android:color/transparent"
        android:alpha="0.8"
        />


    <ImageButton
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/list"
        android:background="@null"
        android:tint="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:alpha="0.8"
        />


    <ImageButton
        android:id="@+id/sensitivity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        android:background="@null"
        android:tint="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:alpha="0.8"
        />


    <ImageView
        android:id="@+id/ice1"
        android:src="@drawable/ice"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:alpha="0.3"
        android:rotation="10"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"

        />

    <ImageView
        android:id="@+id/ice2"
        android:src="@drawable/ice"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:alpha="0.5"
        android:rotation="160"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        />

    <ImageView
        android:id="@+id/ice4"
        android:src="@drawable/ice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.5"
        android:rotation="140"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        />


    <ImageView
        android:id="@+id/ice3"
        android:src="@drawable/ice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.3"
        android:rotation="150"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="210dp"
        android:layout_marginStart="210dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>

