<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad4"
    tools:context="de.tu_chemnitz.mi.medienapplikationen.shake.MainActivity"
    >

    <com.john.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/white"
        wave:wave_height="middle"
        wave:wave_hz="slow"
        wave:wave_length="large"
        wave:progress="90"
        android:layout_marginLeft="-200dp"
        android:layout_marginRight="-200dp"
        android:layout_marginBottom="-100dp"
        android:alpha="0.8"
        />


    <TextView
        android:id="@+id/Cheers"
        android:text="Cheers!"
        android:textColor="#ffffff"
        android:textSize="80sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"

        />



    <ImageView
        android:id="@+id/ice1"
        android:src="@drawable/ice"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:alpha="0.3"
        android:rotation="10"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"

        />

    <ImageView
        android:id="@+id/ice2"
        android:src="@drawable/ice"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:alpha="0.4"
        android:rotation="160"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"

        />

    <ImageView
        android:id="@+id/ice4"
        android:src="@drawable/ice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.3"
        android:rotation="140"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"


        />

    <ImageView
        android:id="@+id/ice3"
        android:src="@drawable/ice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.3"
        android:rotation="150"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="210dp"
        android:layout_marginStart="210dp"

        />


    <ImageView
        android:id="@+id/halm"
        android:src="@drawable/halm"
        android:layout_width="120dp"
        android:layout_height="800dp"
        android:alpha="0.5"
        android:rotation="20"
        android:layout_marginLeft="210dp"
        android:layout_marginStart="210dp"
        />


    <ImageView
        android:id="@+id/lime"
        android:src="@drawable/limette"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:alpha="0.2"
        android:rotation="20"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        />


    <ImageButton
        android:id="@+id/another_one"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/refill"
        android:background="@null"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>

